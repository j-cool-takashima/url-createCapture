{
    "version": 2,
    
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/api/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/public/index.html"
        }
    ],
    "functions": {
        "api/**/*.js": {
            "runtime": "nodejs20.x",
            "maxDuration": 300,
            "memory": 2048
        }
    }
}